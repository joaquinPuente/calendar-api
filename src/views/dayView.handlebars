<h1>Day View - {{days}} {{month}} {{year}} </h1>

<div class="month-view">
    {{#each monthDays}}
    <div class="day{{#if isCurrentDay}} current-day{{/if}}">
        {{this}}
    </div>
    {{/each}}
</div>
    
<!-- Si hay eventos, mostrar el listado -->
{{#if events}}
<div class="event-list">
    <h2>Events:</h2>
    {{#each events}}
    <div class="event">
        <strong>{{this.title}}</strong><br>
        <span>{{this.description}}</span>
    </div>
    {{/each}}
</div>
{{else}}
<!-- Si no hay eventos, mostrar un mensaje -->
<p class="not-events">No events for this day.</p>
{{/if}}

